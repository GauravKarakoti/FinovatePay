# ============================================
# FinovatePay Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control
# ============================================

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finovatepay
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRES_IN=24h

# ============================================
# Blockchain Configuration
# ============================================
BLOCKCHAIN_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_API_KEY
DEPLOYER_PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Contract Addresses (optional - will use deployed/contract-addresses.json if not set)
INVOICE_FACTORY_ADDRESS=
ESCROW_CONTRACT_ADDRESS=
COMPLIANCE_MANAGER_ADDRESS=
PRODUCE_TRACKING_ADDRESS=
FRACTION_TOKEN_ADDRESS=
FINANCING_MANAGER_ADDRESS=

# ============================================
# Email Service (MailerSend)
# ============================================
MAILERSEND_API_KEY=your_mailersend_api_key
MAILERSEND_SENDER_EMAIL=noreply@yourdomain.com
MAILERSEND_SENDER_NAME=FinovatePay

# ============================================
# Alchemy Configuration (for Hardhat)
# ============================================
ALCHEMY_AMOY_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_API_KEY
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# ============================================
# Security Notes:
# ============================================
# 1. Never commit .env files to version control
# 2. Use strong, unique passwords for database
# 3. Keep JWT_SECRET at least 32 characters long
# 4. Store private keys securely - never expose in frontend code
# 5. Rotate API keys regularly
# 6. Use different credentials for production vs development
# ============================================
