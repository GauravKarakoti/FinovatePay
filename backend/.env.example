# ============================================
# POLYGON AMOY TESTNET DEPLOYMENT
# ============================================

# Amoy network RPC endpoint (required for deployment)
# Get from: https://faucet.polygon.technology/ or https://alchemy.com/
AMOY_RPC_URL=https://rpc-amoy.polygon.technology/

# Private key for deployment transactions (NEVER commit!)
# Get from: MetaMask → Account Details → Export Private Key  
# Keep in .env only, never share or commit
AMOY_PRIVATE_KEY=your_private_key_here

# Network chain ID for Amoy
AMOY_CHAIN_ID=80002

# Blockchain Configuration for Polygon Amoy
BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology/
BLOCKCHAIN_NETWORK_ID=80002
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here

# Contract Addresses (Polygon Amoy)
COMPLIANCE_MANAGER_ADDRESS=your_deployed_compliance_manager_address

# KYC Configuration
KYC_PROVIDER=sandbox
# EMAIL SERVICE - MAILERSEND CONFIGURATION
# ============================================
# Get API key from: https://www.mailersend.com
# 1. Create account at MailerSend
# 2. Generate API token in dashboard
# 3. Copy token below (starts with 'mlsn.')
MAILERSEND_ENABLED=true
MAILERSEND_API_KEY=your_mailersend_api_key_here
# Example trial domain: noreply@trial-xxxxxx.mlsender.net
# For production, use custom domain after verification
MAILERSEND_SENDER_EMAIL=your_sender_email@your-domain.com
MAILERSEND_SENDER_NAME=FinovatePay

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=development
